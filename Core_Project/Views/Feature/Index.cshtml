@model EntityLayer.Concrete.Feature

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description">Hakkımda Düzenleme Paneli</p>
                <form class="forms-sample">

                    <div class="form-group" style="display:none">
                        <label>ID</label>
                        <input type="text" class="form-control" value="@Model.FeatureID" name="FeatureID">
                    </div>
                    <div class="form-group">
                        <label>Başlık</label>
                        <input type="text" class="form-control" value="@Model.Header" name="Header">
                    </div>
                    <div class="form-group">
                        <label>İsim Soyisim</label>
                        <input type="text" class="form-control" value="@Model.Name" name="Name">
                    </div>
                    <div class="form-group">
                        <label>Açıklama</label>
                        <input type="text" class="form-control" value="@Model.Title" name="Title">
                    </div>

                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>

}

