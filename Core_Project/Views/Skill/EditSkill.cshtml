@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


@using (Html.BeginForm("EditSkill", "Skill", "Post"))
{
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">

            <p class="card-description">Deneyim Düzenleme Paneli</p>
            <form class="forms-sample">
                <div class="form-group">
                    <label>ID</label>
                    <input type="text" class="form-control" value="@Model.SkillID" name="SkillID">
                </div>
                <div class="form-group">
                    <label>Başlık</label>
                    <input type="text" class="form-control" value="@Model.Title" name="Title">
                </div>
                <div class="form-group">
                    <label>Değer</label>
                    <input type="text" class="form-control" value="@Model.Value" name="Value">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                <button class="btn btn-dark">İptal</button>
            </form>
        </div>
    </div>
</div>
}